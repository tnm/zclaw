# ESP32-S3-Sense voice preset (compatibility alias)
#
# Backward-compatible preset file; prefer sdkconfig.esp32s3-voice.defaults.

# Target
CONFIG_IDF_TARGET="esp32s3"

# Voice pipeline (experimental)
CONFIG_ZCLAW_VOICE=y
CONFIG_ZCLAW_VOICE_RELAY_STT=y
CONFIG_ZCLAW_VOICE_SAMPLE_RATE_HZ=16000
CONFIG_ZCLAW_VOICE_FRAME_MS=30
CONFIG_ZCLAW_VOICE_CAPTURE_PDM=y
CONFIG_ZCLAW_VOICE_PDM_CLK_GPIO=42
CONFIG_ZCLAW_VOICE_PDM_DIN_GPIO=41
CONFIG_ZCLAW_VOICE_VAD_START_THRESHOLD=1800
CONFIG_ZCLAW_VOICE_VAD_END_THRESHOLD=1100
CONFIG_ZCLAW_VOICE_CAPTURE_ALLOC_RESERVE_BYTES=24576

# Prefer PSRAM for longer utterance buffers when available.
# Keep booting on boards without PSRAM.
CONFIG_SPIRAM=y
# XIAO ESP32S3 Sense uses octal PSRAM on the ESP32-S3R8 module.
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_IGNORE_NOTFOUND=y
